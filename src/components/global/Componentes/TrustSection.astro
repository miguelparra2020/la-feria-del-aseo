---
import {  Truck, CircleDollarSign, CircleCheckBig } from 'lucide-react'
---

<section class="trust-section">
  <div class="container">
    <div class="cards-grid">
      <!-- Card 1: Fast Deliveries -->
      <div class="card">
        <div class="icon-wrapper text-white bg-blue-600 rounded-full">
          <Truck />
        </div>
        <h3 class="card-title">Entregas rápidas</h3>
        <p class="card-description">Cobertura eficiente y tiempos confiables</p>
      </div>

      <!-- Card 2: Competitive Prices -->
      <div class="card">
        <div class="icon-wrapper text-white bg-green-600 rounded-full">
          <CircleDollarSign/>
        </div>
        <h3 class="card-title">Precios competitivos</h3>
        <p class="card-description">Ahorro real para hogares y negocios</p>
      </div>

      <!-- Card 3: Certified Products -->
      <div class="card bg-green-600">
        <div class="icon-wrapper text-white bg-yellow-600 rounded-full">
          <CircleCheckBig/>
        </div>
        <h3 class="card-title">Productos certificados</h3>
        <p class="card-description">Calidad garantizada y segura</p>
      </div>

      <!-- Card 4: Personalized Attention -->
      <div class="card">
        <div class="icon-wrapper text-white bg-teal-600 rounded-full">
          <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
            <circle cx="12" cy="7" r="4"></circle>
          </svg>
        </div>
        <h3 class="card-title">Atención personalizada</h3>
        <p class="card-description">Asesoría cercana y confiable</p>
      </div>
    </div>
  </div>
</section>

<style>
  .trust-section {
    background-color: #f8fafc;
    padding: 4rem 1.5rem;
  }

  .container {
    max-width: 1280px;
    margin: 0 auto;
  }

  .cards-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .cards-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .card {
    background-color: white;
    padding: 2rem 1.5rem;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
    text-align: center;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  .icon-wrapper {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 64px;
    height: 64px;
    margin-bottom: 1.25rem;
  }

  .icon {
    color: white;
  }

  .card-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: #1e293b;
    margin: 0 0 0.5rem 0;
    line-height: 1.4;
  }

  .card-description {
    font-size: 0.95rem;
    color: #64748b;
    margin: 0;
    line-height: 1.6;
  }

  @media (max-width: 767px) {
    .trust-section {
      padding: 3rem 1rem;
    }

    .cards-grid {
      gap: 1.5rem;
    }

    .card {
      padding: 1.75rem 1.25rem;
    }
  }
</style>
