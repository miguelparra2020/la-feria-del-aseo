---
import MiguelPaezImg from '@img/FotoPerfilMiguelPaez.png'
import ComercyoLogo from '@img/logoComercyo.png'
import LaFeriaDelAseoLogo from '@img/logoCompany.jpg'

const currentYear = new Date().getFullYear()
---
<footer class="w-full border-t border-gray-200 bg-white py-6">
  <div class="mx-auto max-w-7xl px-4 flex flex-col gap-6">

    <!-- Top: Logo + Nav -->
    <div class="flex flex-col md:flex-row justify-between items-center gap-4">

        <!-- Comercyo branding -->
        <div class="flex items-center gap-3">
            <img
                src={LaFeriaDelAseoLogo}
                alt="Comercyo - Plataforma digital"
                class="h-8 w-auto"
            />
            <span class="text-lg font-semibold text-gray-900">
                laferiadelaseo.com
            </span>
        </div>

      <!-- Navigation -->
      <nav
        class="flex flex-wrap justify-center gap-4 md:gap-6 text-sm text-gray-600"
        aria-label="Footer navigation"
      >
        <a href="https://api.whatsapp.com/send?phone=573133487191&text=Hola%20quiero%20m%C3%A1s%20informaci%C3%B3n" target="_blank"  class="hover:text-gray-900 transition">
          Servicios
        </a>
        <a href="https://api.whatsapp.com/send?phone=573133487191&text=Hola%20quiero%20m%C3%A1s%20informaci%C3%B3n" target="_blank" class="hover:text-gray-900 transition">
          Productos
        </a>
        <a href="https://api.whatsapp.com/send?phone=573133487191&text=Hola%20quiero%20m%C3%A1s%20informaci%C3%B3n" target="_blank" class="hover:text-gray-900 transition">
          Publicaciones
        </a>
        <a href="https://maps.app.goo.gl/JA6spG7AndLcZGYe7" target="_blank" class="hover:text-gray-900 transition">
          Ubicación
        </a>
      </nav>
    </div>

    <!-- Divider -->
    <hr class="border-gray-200" />

    <!-- Bottom -->
    <div class="flex flex-col items-center text-center text-sm text-gray-600 gap-2">

      <div class="flex flex-col sm:flex-row items-center gap-2 sm:gap-4 text-center sm:text-left">
  <span>
    © {currentYear} Todos los derechos reservados.
  </span>

  <div class="flex items-center gap-2">
    <span>By</span>

    <img
      src={ComercyoLogo}
      alt="Miguel Páez - Desarrollador de software"
      class="w-8 h-8 rounded-full object-cover border"
    />

    <a href="https://comercyo.com/" target="_blank"><span class="font-medium">
      comercyo.com
    </span></a>
  </div>
</div>


      <!-- Credits -->
      <div class="flex flex-col items-center gap-1">
        <div class="flex items-center gap-2">
          <img
            src={MiguelPaezImg}
            alt="Miguel Páez - Desarrollador de software"
            class="w-8 h-8 rounded-full object-cover border"
          />
          <a href="https://miguelpaez.vercel.app/" target="_blank">
          <span>
            Miguel Páez — Desarrollador de software
          </span>
          </a>
        </div>
      </div>

    </div>
  </div>
</footer>
